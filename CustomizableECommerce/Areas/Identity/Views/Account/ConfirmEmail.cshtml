@{
    ViewData["Title"] = "Account Activated";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center p-5">
                    <div class="mb-4 text-success">
                        <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Account Activated</h2>
                    <p class="text-muted mb-4">Your account has been successfully activated. You can now log in and start using all our features.</p>
                    <a href="/Identity/Account/Login" class="btn btn-success px-4 py-2">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
