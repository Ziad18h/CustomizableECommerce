@model CustomizableECommerce.Models.ViewModels.ResendEmailConfirmationVM

@{
    ViewData["Title"] = "Resend Confirmation Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4"><i class="bi bi-envelope-arrow-up me-2"></i>Resend Confirmation Email</h3>

                    <form asp-action="ResendEmailConfirmation" id="resendForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="EmailOrUserName" class="form-label"></label>
                            <input asp-for="EmailOrUserName" class="form-control" />
                            <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                            <span class="btn-text"><i class="bi bi-arrow-repeat me-2"></i>Resend Confirmation Email</span>
                        </button>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Login" asp-controller="Account" asp-area="Identity">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/resend-confirmation.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}